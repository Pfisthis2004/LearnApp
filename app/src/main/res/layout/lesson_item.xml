<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/clickbackground"
        android:foreground="?android:selectableItemBackground">

        <!-- Icon máy bay -->
        <ImageView
            android:id="@+id/lessonIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/lesson1_icon"
            android:contentDescription="Lesson Icon"
            android:layout_marginEnd="12dp" />

        <!-- Tiêu đề bài học -->
        <TextView
            android:id="@+id/lessonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="We're going on vacation"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold" />

        <!-- Trạng thái bài học -->
        <TextView
            android:id="@+id/lessonStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed / Locked"
            android:visibility="gone"
            android:textSize="14sp"
            android:textColor="#888888" />
        <!-- Biểu tượng khóa nếu bị khóa -->
        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/lock_icon"
            android:layout_marginStart="8dp"
            android:contentDescription="Lock Icon"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>
